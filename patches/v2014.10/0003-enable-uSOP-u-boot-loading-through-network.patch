From 727b39f8afc6306f84dc112a55c625dd864b24a0 Mon Sep 17 00:00:00 2001
From: Gennaro Tortone <gennaro.tortone@na.infn.it>
Date: Wed, 12 Nov 2014 20:43:16 +0100
Subject: [PATCH] enable uSOP u-boot loading through network

---
 include/configs/am335x_evm.h       |   48 ++++-------------------------------
 include/configs/ti_am335x_common.h |    8 ++++++
 2 files changed, 14 insertions(+), 42 deletions(-)

diff --git a/include/configs/am335x_evm.h b/include/configs/am335x_evm.h
index b9b75db..505e7b2 100644
--- a/include/configs/am335x_evm.h
+++ b/include/configs/am335x_evm.h
@@ -81,7 +81,7 @@
 	"bootdir=\0" \
 	"fdtdir=/dtbs\0" \
 	"bootfile=zImage\0" \
-	"fdtfile=undefined\0" \
+	"fdtfile=am335x-boneblack.dtb\0" \
 	"console=ttyO0,115200n8\0" \
 	"partitions=" \
 		"uuid_disk=${uuid_gpt_disk};" \
@@ -94,7 +94,6 @@
 	"mmcpart=1\0" \
 	"mmcroot=/dev/mmcblk0p2 ro\0" \
 	"mmcrootfstype=ext4 rootwait fixrtc\0" \
-	"rootpath=/export/rootfs\0" \
 	"nfsopts=nolock\0" \
 	"static_ip=${ipaddr}:${serverip}:${gatewayip}:${netmask}:${hostname}" \
 		"::off\0" \
@@ -125,15 +124,6 @@
 		"nfsroot=${nfsroot} " \
 		"ip=${ip} " \
 		"${cmdline}\0" \
-	"spiroot=/dev/mtdblock4 rw\0" \
-	"spirootfstype=jffs2\0" \
-	"spisrcaddr=0xe0000\0" \
-	"spiimgsize=0x362000\0" \
-	"spibusno=0\0" \
-	"spiargs=setenv bootargs console=${console} " \
-		"${optargs} " \
-		"root=${spiroot} " \
-		"rootfstype=${spirootfstype}\0" \
 	"netargs=setenv bootargs console=${console} " \
 		"${optargs} " \
 		"root=/dev/nfs " \
@@ -252,11 +242,6 @@
 				"fi;" \
 			"done;" \
 		"fi;\0" \
-	"spiboot=echo Booting from spi ...; " \
-		"run spiargs; " \
-		"sf probe ${spibusno}:0; " \
-		"sf read ${loadaddr} ${spisrcaddr} ${spiimgsize}; " \
-		"bootz ${loadaddr}\0" \
 	"netboot=echo Booting from network ...; " \
 		"setenv autoload no; " \
 		"dhcp; " \
@@ -287,17 +272,6 @@
 	"ramboot=echo Booting from ramdisk ...; " \
 		"run ramargs; " \
 		"bootz ${loadaddr} ${rdaddr} ${fdtaddr}\0" \
-	"findfdt="\
-		"if test $board_name = A335BONE; then " \
-			"setenv fdtfile am335x-bone.dtb; setenv fdtbase am335x-bone; fi; " \
-		"if test $board_name = A335BNLT; then " \
-			"setenv fdtfile am335x-boneblack.dtb; setenv fdtbase am335x-boneblack; fi; " \
-		"if test $board_name = A33515BB; then " \
-			"setenv fdtfile am335x-evm.dtb; fi; " \
-		"if test $board_name = A335X_SK; then " \
-			"setenv fdtfile am335x-evmsk.dtb; fi; " \
-		"if test $fdtfile = undefined; then " \
-			"echo WARNING: Could not determine device tree to use; fi; \0" \
 	"uname_boot="\
 		"setenv bootdir /boot; " \
 		"setenv bootfile vmlinuz-${uname_r}; " \
@@ -367,21 +341,11 @@
 #endif
 
 #define CONFIG_BOOTCOMMAND \
-	"gpio set 53; " \
-	"i2c mw 0x24 1 0x3e; " \
-	"run findfdt; " \
-	"setenv fdtfile am335x-boneblack.dtb; "\
-	"setenv fdtbase am335x-boneblack; "\
-	"setenv mmcdev 0; " \
-	"setenv bootpart 0:1; " \
-	"run mmcboot;" \
-	"gpio clear 56; " \
-	"gpio clear 55; " \
-	"gpio clear 54; " \
-	"setenv mmcdev 1; " \
-	"setenv bootpart 1:1; " \
-	"run mmcboot;" \
-	"run nandboot;"
+"echo >>> DHCP request for IP address...; " \
+"setenv autoload no; dhcp; sleep 1; " \
+"if test $rootpath = emmc; then echo >>> Booting from eMMC...; setenv mmcdev 1; setenv bootpart 1:1; run mmcboot; " \
+"elif test $rootpath = usd; then echo >>> Booting from external uSD...; i2c mw 0x24 1 0x3e; setenv mmcdev 0; setenv bootpart 0:1; run mmcboot; else " \
+"echo >>> Booting from network...; run netboot; fi;"
 
 /* NS16550 Configuration */
 #define CONFIG_SYS_NS16550_COM1		0x44e09000	/* Base EVM has UART0 */
diff --git a/include/configs/ti_am335x_common.h b/include/configs/ti_am335x_common.h
index 80976e7..86b2791 100644
--- a/include/configs/ti_am335x_common.h
+++ b/include/configs/ti_am335x_common.h
@@ -67,6 +67,14 @@
 /* Enable the watchdog inside of SPL */
 #define CONFIG_SPL_WATCHDOG_SUPPORT
 
+/* include ethernet and TFTP fetch of SPL */
+#define CONFIG_SPL_ENV_SUPPORT
+#define CONFIG_SPL_LIBGENERIC_SUPPORT
+#define CONFIG_SPL_LIBCOMMON_SUPPORT
+#define CONFIG_SPL_ETH_SUPPORT
+#define CONFIG_SPL_NET_SUPPORT
+#define CONFIG_SPL_NET_VCI_STRING       "AM335x U-Boot SPL"
+
 /*
  * Since SPL did pll and ddr initialization for us,
  * we don't need to do it twice.
-- 
